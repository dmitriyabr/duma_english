generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Teacher {
  id           String   @id @default(cuid())
  name         String
  email        String?  @unique
  passwordHash String?
  createdAt    DateTime @default(now())
  classes      Class[]
}

model Class {
  id        String      @id @default(cuid())
  name      String
  teacherId String
  createdAt DateTime    @default(now())
  teacher   Teacher     @relation(fields: [teacherId], references: [id])
  codes     ClassCode[]
  students  Student[]
}

model ClassCode {
  id        String    @id @default(cuid())
  classId   String
  code      String    @unique
  expiresAt DateTime?
  maxUses   Int?
  usesCount Int       @default(0)
  status    String    @default("active")
  createdAt DateTime  @default(now())
  class     Class     @relation(fields: [classId], references: [id])

  @@index([classId])
}

model Student {
  id                  String                @id @default(cuid())
  classId             String
  displayName         String
  loginCode           String?               @unique
  createdAt           DateTime              @default(now())
  attempts            Attempt[]
  gseEvidence         AttemptGseEvidence[]
  metrics             AttemptMetric[]
  gseStageProjections GseStageProjection[]
  profile             LearnerProfile?
  placementSessions   PlacementSession[]
  plannerDecisions    PlannerDecisionLog[]
  progress            ProgressDaily[]
  promotionAudits     PromotionAudit[]
  class               Class                 @relation(fields: [classId], references: [id])
  gseMastery          StudentGseMastery[]
  causalDiagnoses     CausalDiagnosis[]
  twinSnapshots       LearnerTwinSnapshot[]
  oodTaskSpecs        OODTaskSpec[]
  selfRepairCycles    SelfRepairCycle[]
  reviewQueueItems    ReviewQueueItem[]
  rewardTraces        RewardTrace[]
  autopilotEventLogs  AutopilotEventLog[]
  autopilotOutcomes   AutopilotDelayedOutcome[]
  policyDecisionLogsV2 PolicyDecisionLogV2[]
  vocabulary          StudentVocabulary[]
  taskInstances       TaskInstance[]

  @@index([classId])
}

model Task {
  id                 String                    @id @default(cuid())
  type               String
  prompt             String
  level              Int                       @default(1)
  metaJson           Json?
  createdAt          DateTime                  @default(now())
  attempts           Attempt[]
  gseTargets         TaskGseTarget[]
  taskInstance       TaskInstance?
  autopilotEventLogs AutopilotEventLog[]
  autopilotOutcomes  AutopilotDelayedOutcome[]
  policyDecisionLogsV2 PolicyDecisionLogV2[]
}

model Attempt {
  id                    String               @id @default(cuid())
  studentId             String
  taskId                String
  status                String               @default("created")
  audioObjectKey        String?
  transcript            String?
  speechMetricsJson     Json?
  scoresJson            Json?
  feedbackJson          Json?
  createdAt             DateTime             @default(now())
  completedAt           DateTime?
  durationSec           Float?
  errorCode             String?
  errorMessage          String?
  rawRecognitionJson    Json?
  taskEvaluationJson    Json?
  aiDebugJson           Json?
  nodeOutcomesJson      Json?
  recoveryTriggered     Boolean              @default(false)
  student               Student              @relation(fields: [studentId], references: [id])
  task                  Task                 @relation(fields: [taskId], references: [id])
  causalDiagnosis       CausalDiagnosis?
  gseEvidence           AttemptGseEvidence[]
  metrics               AttemptMetric[]
  placementResponses    PlacementResponse[]
  sourceRepairCycles    SelfRepairCycle[]    @relation("SelfRepairSourceAttempt")
  immediateRepairCycles SelfRepairCycle[]    @relation("SelfRepairImmediateAttempt")
  delayedRepairCycles   SelfRepairCycle[]    @relation("SelfRepairDelayedAttempt")
  reviewQueueItems      ReviewQueueItem[]    @relation("ReviewQueueAttempt")
  rewardTraces          RewardTrace[]
  autopilotEventLogs    AutopilotEventLog[]
  autopilotOutcomes     AutopilotDelayedOutcome[]
  policyDecisionLogsV2  PolicyDecisionLogV2[]

  @@index([studentId])
  @@index([status])
}

model AttemptMetric {
  id                 String   @id @default(cuid())
  attemptId          String
  studentId          String
  metricKey          String
  value              Float
  source             String
  reliability        String
  calculationVersion String
  createdAt          DateTime @default(now())
  attempt            Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  student            Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([attemptId])
  @@index([studentId, metricKey])
}

model LearnerProfile {
  id                        String    @id @default(cuid())
  studentId                 String    @unique
  stage                     String    @default("A0")
  ageBand                   String    @default("9-11")
  placementScore            Float?
  placementConfidence       Float?
  activeTrack               String    @default("balanced_convo_speech")
  cycleWeek                 Int       @default(1)
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  placementFresh            Boolean   @default(false)
  placementCompletedAt      DateTime?
  placementUncertainNodeIds String[]
  placementCarryoverJson    Json?
  stageSource               String    @default("gse_projection")
  stageEvidenceJson         Json?
  coldStartActive           Boolean   @default(true)
  coldStartAttempts         Int       @default(0)
  student                   Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model StudentVocabulary {
  id                 String    @id @default(cuid())
  studentId          String
  lemma              String
  status             String    @default("new")
  nextReviewAt       DateTime?
  retentionScore     Float     @default(0)
  usageEvidenceCount Int       @default(0)
  sourceTopicId      String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  student            Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, lemma])
  @@index([studentId, status, nextReviewAt])
}

model PlacementSession {
  id                 String              @id @default(cuid())
  studentId          String
  status             String              @default("started")
  currentIndex       Int                 @default(0)
  responsesJson      Json?
  resultJson         Json?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  completedAt        DateTime?
  questionCount      Int                 @default(0)
  theta              Float               @default(0)
  sigma              Float               @default(1)
  askedItemIds       String[]
  currentItemId      String?
  stageEstimate      String?
  confidenceEstimate Float?
  placementMode      String?             @default("irt")
  conversationTheme  String?
  transcriptHistory  String[]            @default([])
  stageHistory       String[]            @default([])
  responses          PlacementResponse[]
  currentItem        PlacementItem?      @relation("PlacementCurrentItem", fields: [currentItemId], references: [id])
  student            Student             @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId, status])
}

model PlacementItem {
  id                String              @id @default(cuid())
  skillKey          String
  stageBand         String
  taskType          String
  promptTemplate    String
  hint              String?
  expectedMinWords  Int                 @default(12)
  assessmentMode    String              @default("stt")
  maxDurationSec    Int                 @default(60)
  gseTargets        String[]
  difficulty        Float
  discrimination    Float               @default(1)
  ageBand           String?
  active            Boolean             @default(true)
  metadataJson      Json?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  responses         PlacementResponse[]
  currentInSessions PlacementSession[]  @relation("PlacementCurrentItem")

  @@index([active, ageBand, skillKey])
  @@index([difficulty])
}

model PlacementResponse {
  id                  String           @id @default(cuid())
  sessionId           String
  itemId              String
  attemptId           String?
  itemScore           Float
  observedMetricsJson Json?
  thetaBefore         Float
  thetaAfter          Float
  sigmaAfter          Float
  createdAt           DateTime         @default(now())
  attempt             Attempt?         @relation(fields: [attemptId], references: [id])
  item                PlacementItem    @relation(fields: [itemId], references: [id], onDelete: Cascade)
  session             PlacementSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
  @@index([itemId])
  @@index([attemptId])
}

model ProgressDaily {
  id          String   @id @default(cuid())
  studentId   String
  date        DateTime
  metricsJson Json
  createdAt   DateTime @default(now())
  student     Student  @relation(fields: [studentId], references: [id])

  @@unique([studentId, date])
}

model GseCatalogVersion {
  id           String    @id @default(cuid())
  version      String    @unique
  source       String
  description  String?
  metadataJson Json?
  createdAt    DateTime  @default(now())
  nodes        GseNode[]
}

model GseNode {
  id               String               @id @default(cuid())
  nodeId           String               @unique
  sourceKey        String
  type             String
  catalog          String
  gseMin           Int?
  gseMax           Int?
  gseCenter        Float?
  cefrBand         String?
  audience         String?
  skill            String?
  descriptor       String
  source           String
  sourceVersion    String?
  licenseTag       String?
  metadataJson     Json?
  catalogVersionId String
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  attemptEvidence  AttemptGseEvidence[]
  bundleLinks      GseBundleNode[]
  catalogVersion   GseCatalogVersion    @relation(fields: [catalogVersionId], references: [id], onDelete: Cascade)
  aliases          GseNodeAlias[]
  embedding        GseNodeEmbedding?
  outgoingEdges    GseNodeEdge[]        @relation("GseNodeEdgeFrom")
  incomingEdges    GseNodeEdge[]        @relation("GseNodeEdgeTo")
  mastery          StudentGseMastery[]
  selfRepairCycles SelfRepairCycle[]
  reviewQueueItems ReviewQueueItem[]
  taskTargets      TaskGseTarget[]

  @@index([catalogVersionId, type])
  @@index([catalogVersionId, audience, skill])
}

model GseNodeEmbedding {
  id        String   @id @default(cuid())
  nodeId    String   @unique
  model     String
  textHash  String
  vector    Json
  dim       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  node      GseNode  @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)

  @@index([model])
}

model GseBundle {
  id                String          @id @default(cuid())
  key               String          @unique
  stage             String
  domain            String
  title             String
  requiredCoverage  Float           @default(0.65)
  minDirectEvidence Int             @default(12)
  reliabilityGate   Float           @default(0.65)
  active            Boolean         @default(true)
  metadataJson      Json?
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  nodes             GseBundleNode[]

  @@index([stage, domain, active])
}

model GseBundleNode {
  id        String    @id @default(cuid())
  bundleId  String
  nodeId    String
  required  Boolean   @default(true)
  weight    Float     @default(1)
  createdAt DateTime  @default(now())
  bundle    GseBundle @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  node      GseNode   @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)

  @@unique([bundleId, nodeId])
  @@index([nodeId])
}

model GseNodeAlias {
  id        String   @id @default(cuid())
  nodeId    String
  alias     String
  source    String
  createdAt DateTime @default(now())
  node      GseNode  @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)

  @@unique([nodeId, alias])
  @@index([alias])
}

model GseNodeEdge {
  id           String   @id @default(cuid())
  fromNodeId   String
  toNodeId     String
  edgeType     String
  weight       Float?
  metadataJson Json?
  createdAt    DateTime @default(now())
  fromNode     GseNode  @relation("GseNodeEdgeFrom", fields: [fromNodeId], references: [nodeId], onDelete: Cascade)
  toNode       GseNode  @relation("GseNodeEdgeTo", fields: [toNodeId], references: [nodeId], onDelete: Cascade)

  @@unique([fromNodeId, toNodeId, edgeType])
  @@index([toNodeId, edgeType])
}

model AttemptGseEvidence {
  id               String   @id @default(cuid())
  attemptId        String
  studentId        String
  nodeId           String
  signalType       String
  confidence       Float
  evidenceText     String?
  metadataJson     Json?
  createdAt        DateTime @default(now())
  evidenceKind     String   @default("supporting")
  opportunityType  String   @default("incidental")
  score            Float    @default(0.5)
  weight           Float    @default(0.2)
  source           String   @default("rules")
  domain           String?
  usedForPromotion Boolean  @default(false)
  activationImpact String   @default("none")
  targeted         Boolean  @default(true)
  causeTopLabel    String?
  causeTopProbability Float?
  causeDistributionJson Json?
  causeModelVersion String?
  attempt          Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  node             GseNode  @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)
  student          Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
  autopilotLogs    AutopilotEventLog[]

  @@index([attemptId])
  @@index([studentId, nodeId])
  @@index([studentId, nodeId, usedForPromotion])
  @@index([causeTopLabel, createdAt])
}

model StudentGseMastery {
  id                      String    @id @default(cuid())
  studentId               String
  nodeId                  String
  masteryScore            Float
  evidenceCount           Int       @default(0)
  reliability             String
  lastEvidenceAt          DateTime?
  decayStateJson          Json?
  spacingStateJson        Json?
  calculationVersion      String
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  masteryMean             Float?
  masterySigma            Float?
  decayedMastery          Float?
  halfLifeDays            Float?
  alpha                   Float     @default(1)
  beta                    Float     @default(1)
  uncertainty             Float?
  directEvidenceCount     Int       @default(0)
  negativeEvidenceCount   Int       @default(0)
  crossTaskEvidenceCount  Int       @default(0)
  activationState         String    @default("observed")
  supportingEvidenceCount Int       @default(0)
  incidentalTaskTypeCount Int       @default(0)
  verificationDueAt       DateTime?
  dominantCauseLabel      String?
  dominantCauseProbability Float?
  dominantCauseDistributionJson Json?
  dominantCauseModelVersion String?
  node                    GseNode   @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)
  student                 Student   @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, nodeId])
  @@index([studentId, masteryScore])
  @@index([studentId, activationState, verificationDueAt])
  @@index([studentId, dominantCauseLabel])
}

model GseStageProjection {
  id           String   @id @default(cuid())
  studentId    String
  stage        String
  stageScore   Float
  confidence   Float
  source       String
  reason       String
  evidenceJson Json?
  createdAt    DateTime @default(now())
  student      Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId, createdAt])
}

model PlannerDecisionLog {
  id                  String               @id @default(cuid())
  studentId           String
  contextSnapshotId   String?
  decisionTs          DateTime             @default(now())
  candidateSetJson    Json
  chosenTaskType      String
  utilityJson         Json
  fallbackUsed        Boolean              @default(false)
  latencyMs           Int?
  expectedGain        Float?
  targetNodeIds       String[]
  selectionReason     String
  primaryGoal         String?
  estimatedDifficulty Float?
  createdAt           DateTime             @default(now())
  domainsTargeted     String[]             @default([])
  diagnosticMode      Boolean              @default(false)
  contextSnapshot     LearnerTwinSnapshot? @relation(fields: [contextSnapshotId], references: [id], onDelete: SetNull)
  oodTaskSpecs        OODTaskSpec[]
  rewardTraces        RewardTrace[]
  autopilotEventLogs  AutopilotEventLog[]
  autopilotOutcomes   AutopilotDelayedOutcome[]
  contractV2          PolicyDecisionLogV2?
  student             Student              @relation(fields: [studentId], references: [id], onDelete: Cascade)
  taskInstance        TaskInstance?

  @@index([studentId, decisionTs])
  @@index([contextSnapshotId])
}

model TaskInstance {
  id                  String              @id @default(cuid())
  studentId           String
  taskId              String              @unique
  decisionLogId       String?             @unique
  taskType            String
  targetNodeIds       String[]
  specJson            Json
  fallbackUsed        Boolean             @default(false)
  estimatedDifficulty Float?
  createdAt           DateTime            @default(now())
  decisionLog         PlannerDecisionLog? @relation(fields: [decisionLogId], references: [id])
  oodTaskSpec         OODTaskSpec?
  delayedRepairCycles SelfRepairCycle[]   @relation("SelfRepairDelayedTaskInstance")
  reviewQueueItems    ReviewQueueItem[]   @relation("ReviewQueueTaskInstance")
  rewardTraces        RewardTrace[]
  autopilotEventLogs  AutopilotEventLog[]
  autopilotOutcomes   AutopilotDelayedOutcome[]
  student             Student             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  task                Task                @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([studentId, createdAt])
  @@index([decisionLogId])
}

model PromotionAudit {
  id             String   @id @default(cuid())
  studentId      String
  fromStage      String
  targetStage    String
  promoted       Boolean
  blockedByNodes String[]
  reasonsJson    Json
  readinessScore Float
  createdAt      DateTime @default(now())
  student        Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId, createdAt])
}

model TaskGseTarget {
  id        String   @id @default(cuid())
  taskId    String
  nodeId    String
  weight    Float    @default(1)
  required  Boolean  @default(false)
  createdAt DateTime @default(now())
  node      GseNode  @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, nodeId])
  @@index([nodeId])
}

model CausalDiagnosis {
  id                     String   @id @default(cuid())
  attemptId              String   @unique
  studentId              String
  taxonomyVersion        String   @default("causal-taxonomy-v1")
  modelVersion           String
  topLabel               String
  topProbability         Float
  entropy                Float?
  topMargin              Float?
  distributionJson       Json
  confidenceIntervalJson Json?
  counterfactualJson     Json?
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt
  attempt                Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  student                Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId, createdAt])
  @@index([topLabel, createdAt])
}

model LearnerTwinSnapshot {
  id                      String               @id @default(cuid())
  studentId               String
  snapshotTs              DateTime             @default(now())
  source                  String               @default("attempt_update")
  placementStage          String?
  promotionStage          String?
  masteryProjectionJson   Json
  uncertaintyHotspotsJson Json?
  motivationSignalsJson   Json?
  frictionSignalsJson     Json?
  localeProfileJson       Json?
  createdAt               DateTime             @default(now())
  updatedAt               DateTime             @updatedAt
  plannerDecisions        PlannerDecisionLog[]
  policyDecisionLogsV2    PolicyDecisionLogV2[]
  student                 Student              @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId, snapshotTs])
  @@index([source, snapshotTs])
}

model OODTaskSpec {
  id                 String              @id @default(cuid())
  studentId          String
  taskInstanceId     String?             @unique
  decisionLogId      String?
  axisTags           String[]            @default([])
  difficultyAnchor   Float?
  inDomainDifficulty Float?
  difficultyDelta    Float?
  status             String              @default("planned")
  verdict            String?
  metadataJson       Json?
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  decisionLog        PlannerDecisionLog? @relation(fields: [decisionLogId], references: [id], onDelete: SetNull)
  student            Student             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  taskInstance       TaskInstance?       @relation(fields: [taskInstanceId], references: [id], onDelete: SetNull)

  @@index([studentId, createdAt])
  @@index([studentId, status, createdAt])
  @@index([decisionLogId])
}

model SelfRepairCycle {
  id                                String        @id @default(cuid())
  studentId                         String
  nodeId                            String?
  sourceAttemptId                   String
  immediateAttemptId                String?
  delayedVerificationAttemptId      String?
  delayedVerificationTaskInstanceId String?
  status                            String        @default("pending_immediate_retry")
  causeLabel                        String?
  loopIndex                         Int           @default(1)
  feedbackJson                      Json?
  metadataJson                      Json?
  createdAt                         DateTime      @default(now())
  updatedAt                         DateTime      @updatedAt
  delayedVerificationAttempt        Attempt?      @relation("SelfRepairDelayedAttempt", fields: [delayedVerificationAttemptId], references: [id], onDelete: SetNull)
  delayedVerificationTaskInstance   TaskInstance? @relation("SelfRepairDelayedTaskInstance", fields: [delayedVerificationTaskInstanceId], references: [id], onDelete: SetNull)
  immediateAttempt                  Attempt?      @relation("SelfRepairImmediateAttempt", fields: [immediateAttemptId], references: [id], onDelete: SetNull)
  node                              GseNode?      @relation(fields: [nodeId], references: [nodeId], onDelete: SetNull)
  sourceAttempt                     Attempt       @relation("SelfRepairSourceAttempt", fields: [sourceAttemptId], references: [id], onDelete: Cascade)
  student                           Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([sourceAttemptId, loopIndex])
  @@index([studentId, status, createdAt])
  @@index([nodeId, status])
  @@index([delayedVerificationTaskInstanceId])
}

model ReviewQueueItem {
  id             String        @id @default(cuid())
  studentId      String
  nodeId         String
  queueType      String        @default("memory_review")
  status         String        @default("pending")
  reasonCode     String?
  priority       Int           @default(100)
  dueAt          DateTime
  taskInstanceId String?
  attemptId      String?
  metadataJson   Json?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  completedAt    DateTime?
  attempt        Attempt?      @relation("ReviewQueueAttempt", fields: [attemptId], references: [id], onDelete: SetNull)
  node           GseNode       @relation(fields: [nodeId], references: [nodeId], onDelete: Cascade)
  student        Student       @relation(fields: [studentId], references: [id], onDelete: Cascade)
  taskInstance   TaskInstance? @relation("ReviewQueueTaskInstance", fields: [taskInstanceId], references: [id], onDelete: SetNull)

  @@index([studentId, status, dueAt])
  @@index([studentId, nodeId, status])
  @@index([taskInstanceId])
}

model RewardTrace {
  id              String             @id @default(cuid())
  studentId       String
  decisionLogId   String
  taskInstanceId  String?
  attemptId       String?
  rewardVersion   String
  rewardWindow    String             @default("same_session")
  masteryDelta    Float              @default(0)
  transferReward  Float              @default(0)
  retentionReward Float              @default(0)
  frictionPenalty Float              @default(0)
  totalReward     Float
  componentsJson  Json?
  outcomeLinkedAt DateTime?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  attempt         Attempt?           @relation(fields: [attemptId], references: [id], onDelete: SetNull)
  decisionLog     PlannerDecisionLog @relation(fields: [decisionLogId], references: [id], onDelete: Cascade)
  student         Student            @relation(fields: [studentId], references: [id], onDelete: Cascade)
  taskInstance    TaskInstance?      @relation(fields: [taskInstanceId], references: [id], onDelete: SetNull)

  @@unique([decisionLogId, rewardWindow, rewardVersion])
  @@index([studentId, createdAt])
  @@index([decisionLogId, createdAt])
}

model PolicyDecisionLogV2 {
  id                 String             @id @default(cuid())
  decisionLogId      String             @unique
  studentId          String
  policyVersion      String
  contextSnapshotId  String?
  candidateActionSet Json
  preActionScores    Json
  propensity         Float?
  activeConstraints  String[]           @default([])
  linkageTaskId      String?
  linkageAttemptId   String?
  linkageSessionId   String?
  source             String             @default("sql_trigger_v1")
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  attempt            Attempt?           @relation(fields: [linkageAttemptId], references: [id], onDelete: SetNull)
  contextSnapshot    LearnerTwinSnapshot? @relation(fields: [contextSnapshotId], references: [id], onDelete: SetNull)
  decisionLog        PlannerDecisionLog @relation(fields: [decisionLogId], references: [id], onDelete: Cascade)
  student            Student            @relation(fields: [studentId], references: [id], onDelete: Cascade)
  task               Task?              @relation(fields: [linkageTaskId], references: [id], onDelete: SetNull)

  @@index([studentId, createdAt])
  @@index([policyVersion, createdAt])
  @@index([linkageTaskId, createdAt])
  @@index([linkageAttemptId, createdAt])
  @@index([contextSnapshotId, createdAt])
}

model AutopilotDelayedOutcome {
  id               String               @id @default(cuid())
  studentId        String
  decisionLogId    String?
  taskInstanceId   String?
  taskId           String?
  attemptId        String?
  outcomeWindow    String               @default("same_session")
  status           String               @default("recorded")
  outcomeJson      Json?
  createdAt        DateTime             @default(now())
  updatedAt        DateTime             @updatedAt
  attempt          Attempt?             @relation(fields: [attemptId], references: [id], onDelete: SetNull)
  decisionLog      PlannerDecisionLog?  @relation(fields: [decisionLogId], references: [id], onDelete: SetNull)
  student          Student              @relation(fields: [studentId], references: [id], onDelete: Cascade)
  task             Task?                @relation(fields: [taskId], references: [id], onDelete: SetNull)
  taskInstance     TaskInstance?        @relation(fields: [taskInstanceId], references: [id], onDelete: SetNull)
  autopilotLogs    AutopilotEventLog[]

  @@index([studentId, createdAt])
  @@index([decisionLogId, createdAt])
  @@index([taskId, createdAt])
  @@index([attemptId, createdAt])
  @@index([outcomeWindow, createdAt])
}

model AutopilotEventLog {
  id               String                   @id @default(cuid())
  eventType        String
  studentId        String?
  decisionLogId    String?
  taskInstanceId   String?
  taskId           String?
  attemptId        String?
  evidenceId       String?
  delayedOutcomeId String?
  payloadJson      Json?
  createdAt        DateTime                 @default(now())
  attempt          Attempt?                 @relation(fields: [attemptId], references: [id], onDelete: SetNull)
  decisionLog      PlannerDecisionLog?      @relation(fields: [decisionLogId], references: [id], onDelete: SetNull)
  delayedOutcome   AutopilotDelayedOutcome? @relation(fields: [delayedOutcomeId], references: [id], onDelete: SetNull)
  evidence         AttemptGseEvidence?      @relation(fields: [evidenceId], references: [id], onDelete: SetNull)
  student          Student?                 @relation(fields: [studentId], references: [id], onDelete: SetNull)
  task             Task?                    @relation(fields: [taskId], references: [id], onDelete: SetNull)
  taskInstance     TaskInstance?            @relation(fields: [taskInstanceId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([eventType, createdAt])
  @@index([studentId, createdAt])
  @@index([decisionLogId, createdAt])
  @@index([taskId, createdAt])
  @@index([attemptId, createdAt])
  @@index([evidenceId])
  @@index([delayedOutcomeId])
}

model AnchorEvalRun {
  id                 String    @id @default(cuid())
  policyVersion      String
  rewardVersion      String
  datasetVersion     String
  status             String    @default("started")
  startedAt          DateTime  @default(now())
  completedAt        DateTime?
  trafficWindowStart DateTime?
  trafficWindowEnd   DateTime?
  metricsJson        Json?
  reportUri          String?
  notes              String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  @@index([status, startedAt])
  @@index([policyVersion, startedAt])
}
